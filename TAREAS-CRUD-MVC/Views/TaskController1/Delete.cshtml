@model TAREAS_CRUD_MVC.Models.Task

<h1>Eliminar Tarea</h1>

<p>¿Estás seguro de que quieres eliminar la tarea "<strong>@Model.Name</strong>"?</p>

<form asp-controller="TaskController1" asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdTask" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index">Cancelar</a>
</form>
